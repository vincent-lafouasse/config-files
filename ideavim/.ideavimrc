set clipboard+=unnamedplus

nnoremap \e :e ~/.ideavimrc<CR>
nnoremap \r :source ~/.ideavimrc<CR>

set number

set incsearch
set hlsearch
nnoremap <Esc> :nohlsearch<CR>
set smartcase
set highlightedyank
set surround

let mapleader=" "

map <leader>hh <c-w>h
map <leader>ll <c-w>l
map <leader>jj <c-w>j
map <leader>kk <c-w>k

map <leader>HH <Action>(ToggleDistractionFreeMode)
map <leader>HP <Action>(TogglePresentationMode)
map <leader>ht <Action>(HideActiveWindow)

map <leader>tt <Action>(ActivateTerminalToolWindow)

map <leader>ss <Action>(SearchEverywhere)
map <leader>sf <Action>(GotoFile)
map <leader>sg <Action>(GotoSymbol)

map gn <Action>(GotoNextError)
map gp <Action>(GotoPreviousError)

" gd already goes to definition
map gi <Action>(GotoImplementation)
map U <C-R>